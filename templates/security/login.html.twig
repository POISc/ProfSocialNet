{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/baseDarkStyle.css">
    <link rel="stylesheet" href="/assets/css/login-outStyle.css">
{% endblock %}

{% block body %}
<form class="user-log-from" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Вы зарегестрированы как {{ app.user.userIdentifier }}, <a href="{{ logout_path() }}">Выйти</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Вход</h1>
    <div class="field">
        <label for="inputUuid">Логин</label>
        <input type="text" value="{{ last_username }}" name="uuid" id="inputUuid" class="form-control" autocomplete="username" required autofocus>
    </div>
    <div class="field">
        <label for="inputPassword">Пароль</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
    </div>

    <div class="field">
        <span> Если еще нет аккаунтка, <a href="{{ path('app_register') }}">регистрация</a> </span>
    </div>

    <button class="action-buton" type="submit">
        Войти
    </button>
</form>
{% endblock %}
