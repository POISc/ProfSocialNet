{% extends 'base.html.twig' %}

{% block title %}News feed{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/baseDarkStyle.css">
    <link rel="stylesheet" href="/assets/css/newsFeedStyle.css">
{% endblock %}

{% block body %}
    {% include 'components/navigation-bar.html.twig' %}

    <div id="editPostModal" class="modal hidden">
        <div class="modal-content">
            <h2>Редактирование поста</h2>

            <form id="editPostForm" method="post">
                <textarea name="content" placeholder="Содержание поста"></textarea>

                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" name="_csrf_token" value="">
                <input type="hidden" name="post_id" value="">

                <button type="submit">Сохранить</button>
                <button type="button" id="closeModal">Отмена</button>
            </form>
        </div>
    </div>

    <div class="news-feed-section">
        <div class="create-post-box">
            <form action="{{ path('post_create') }}" method="post">
                <div class="create-post-inner">

                    <div class="post-input">
                        <textarea id="create-post-content" name="content" placeholder="How are you?" required></textarea>
                                    
                        <div class="post-actions">
                            <button class="action-buton" type="submit">Опубликовать</button>
                        </div>
                    </div>

                </div>
            </form>
        </div>

        {% if posts is not empty %}
            <div class ="posts-list">
            {% for post in posts %}
                {% set currData = postCounts[post.id] %}
                <div class="post-box">
                    <div class="content-post">{{ post.content }}</div>
                    {% if post.attachments is not empty %} <div class="attachments-post"> attachments is exist</div> {% endif %}
                    <div class="post-reactions" data-id="{{ post.id }}" data-token="{{ csrf_token('react' ~ post.id) }}">
                        <button class="action-buton like-button {{ currData.currentUserReaction == 'like' ? 'active-element': ''}}" ><img class="icon" src="{{ asset('assets/icons/Like.png') }}"> <span class="like-count">{{ currData.counts.likes }}</span></button>
                        <button class="action-buton dislike-button {{ currData.currentUserReaction == 'dislike' ? 'active-element': ''}}"><img class="icon" src="{{ asset('assets/icons/Dislike.png') }}"> <span class="dislike-count">{{ currData.counts.dislikes }}</span></button>
                    </div>

                    <a href="{{ path('post_view', {'id': post.id}) }}" class="post-link"> комменты </a>

                    {% if app.user and app.user.id == post.author.id %}
                        <div class="additional-actions-selector">
                            <button class="dropbtn">...</button>
                            <div class="dropdown-menu-content">
                                <button class="edit-post-button action-buton" data-id="{{ post.id }}" data-content="{{ post.content }}" data-token="{{ csrf_token('edit_post' ~ post.id) }}">
                                    Редактировать
                                </button>
                                <form method="post" action="{{ path('post_delete', {'id': post.id}) }}">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="post_id" value="{{ post.id }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                    <button class="action-buton" type="submit">Удалить пост</button>
                                </form>
                            </div>
                        </div>
                    {% endif %}
                </div>
                
            {% endfor %}
            </div>
        {% else %}
            <div class="no-posts">Нет никаких постов</div>
        {% endif %}
    </div>

    
    {% include 'components/quick-news.html.twig' %}
    
    <script src="{{ asset('assets/scripts/reactPost.js') }}"></script>
    <script src="{{ asset('assets/scripts/popupPostLogic.js') }}"></script>
{% endblock %}
